{
  "name": "@samna-salta/backend",
  "version": "1.0.0",
  "description": "Samna Salta - Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "BACKEND_PORT=${BACKEND_PORT:-3001} node src/start-wrapper.js",
    "start:direct": "BACKEND_PORT=${BACKEND_PORT:-3001} node src/server.js",
    "start:minimal": "BACKEND_PORT=${BACKEND_PORT:-3001} node src/minimal-server.js",
    "start:fallback": "BACKEND_PORT=${BACKEND_PORT:-3001} node src/fallback-server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Backend is JavaScript, no build step needed'",
    "test": "jest",
    "lint": "eslint src --ext .js --fix",
    "lint:check": "eslint src --ext .js",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
