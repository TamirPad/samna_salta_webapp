{
  "name": "samna-salta-monorepo",
  "version": "1.0.0",
  "description": "Samna Salta - Traditional Yemenite Food Ordering Webapp (Monorepo)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run start --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:common": "npm run build --workspace=packages/common",
    "start:backend": "npm run start --workspace=apps/backend",
    "test": "npm run test --workspaces",
    "test:coverage": "./test-coverage.sh",
    "test:frontend": "npm run test --workspace=apps/frontend",
    "test:backend": "npm run test --workspace=apps/backend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "clean:all": "npm run clean:all --workspaces && rm -rf node_modules package-lock.json",
    "cleanup": "./cleanup-targeted.sh",
    "cleanup:full": "./cleanup-repo.sh",
    "optimize": "./optimize-repo.sh",
    "install:all": "npm install && npm install --workspace=apps/frontend && npm install --workspace=apps/backend",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "deploy": "npm run build && echo 'Build completed successfully'",
    "deploy:prod": "./deploy-production.sh",
    "deploy:staging": "npm run build && echo 'Staging deployment completed'",
    "setup": "npm run install:all",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "update": "npm update"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "css-minimizer-webpack-plugin": "^7.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/samna-salta-webapp.git"
  },
  "keywords": [
    "monorepo",
    "react",
    "typescript",
    "nodejs",
    "express",
    "food-ordering",
    "yemenite",
    "restaurant"
  ],
  "author": "Your Name",
  "license": "MIT"
}
