{
  "name": "samna-salta-monorepo",
  "version": "1.0.0",
  "description": "Samna Salta - Traditional Yemenite Food Ordering Webapp (Monorepo)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run start --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=apps/frontend",
    "test:backend": "npm run test --workspace=apps/backend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "clean": "rm -rf node_modules && npm install",
    "install:all": "npm install",
    "start:prod": "cd apps/backend && npm start",
    "deploy:check": "npm run build && npm run test",
    "deploy:prepare": "npm run clean && npm run install:all && npm run build",
    "db:migrate": "cd apps/backend && npm run db:migrate",
    "db:seed": "cd apps/backend && npm run db:seed",
    "logs": "cd apps/backend && npm run logs",
    "health": "curl http://localhost:3001/health"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/samna-salta-webapp.git"
  },
  "keywords": [
    "monorepo",
    "react",
    "typescript",
    "nodejs",
    "express",
    "food-ordering",
    "yemenite",
    "restaurant"
  ],
  "author": "Your Name",
  "license": "MIT"
}
